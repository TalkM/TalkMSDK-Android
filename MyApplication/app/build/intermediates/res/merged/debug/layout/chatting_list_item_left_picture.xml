<?xml version="1.0" encoding="utf-8"?>
<!-- 之前的角色里的表情图片查看布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="5dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp" >

        <ImageView
            android:id="@+id/iv_userhead"
            android:layout_width="46.5dp"
            android:layout_height="45.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/xiaohei"
            android:paddingBottom="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:scaleType="fitXY"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/iv_userhead"
			android:orientation="vertical"
            android:gravity="center_vertical" >

			<!--android:background="@drawable/chatfrom_bg"-->
            <FrameLayout
                android:id="@+id/tv_chatcontent_main_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
				android:background="@drawable/bubble_in"
                android:clickable="true"
                android:lineSpacingExtra="2dp"
                android:minHeight="30dp"
                android:paddingBottom="3dp"
                android:paddingLeft="18dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp" >

                <!-- android:maxHeight这样的属性只在android:adjustViewBounds==true时才起效 -->
            	<ImageView
	                android:id="@+id/tv_chatcontent"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:maxHeight="160dp"
	                android:maxWidth="160dp"
	                android:minWidth="80dp"
	                android:adjustViewBounds="true"
	                android:src="@null"
	                android:clickable="false"
                	android:focusable="false" />
            	
            </FrameLayout>

            <TextView
                android:id="@+id/tv_sendtime"
                style="@style/chat_text_date_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_marginTop="3dp"
				android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:text="08:10" />

        </LinearLayout>

        <!--
        <TextView
            android:id="@+id/tv_chatcontent"
            style="@style/chat_content_date_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_userhead"
            android:background="@drawable/chatfrom_bg"
            android:text="11111111111111" />
        -->

        <TextView
            android:id="@+id/tv_username"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/iv_userhead"
            android:layout_toLeftOf="@id/iv_userhead"
            android:text="jack"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>