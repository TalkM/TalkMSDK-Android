<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Chat Header -->
    <FrameLayout
        android:id="@+id/widget_title_bar"
        style="@style/widget_title_bar_style"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="0dp"
        android:background="@android:color/holo_blue_bright">

        <!-- 左按钮区布局 -->
        <LinearLayout
            android:id="@+id/widget_title_expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_backToFriendsBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginRight="2dp"
                android:orientation="horizontal"
                android:background="?android:attr/selectableItemBackground">
                <!--android:layout_gravity="right|center"-->

                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--style="@style/widget_title_bar_backBtn_style"-->
                <ImageView
                    android:id="@+id/chatting_list_view_backToFriendsBtn"
                    android:background="@drawable/ic_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="60dp"-->
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/iv_profile_image"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_onlinetick"
                        android:layout_marginTop="-3dp"
                        android:layout_marginStart="32dp"
                        android:id="@+id/iv_onlineStatus"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <!-- name & status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_name"
                            android:text=""
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif"/>

                        <!--android:foreground="@color/black"-->
                        <!--android:background="@drawable/talkm_sytle_chat_profile"-->
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_personal_signature"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-thin"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_seeMoreBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="right|center"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="gone">

                    <!--android:background="@drawable/roster_list_view_more_btn_nomal"-->
                    <!--android:layout_width="20dp"-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chatting_list_view_seeMoreBtn"
                        android:background="@drawable/ic_action"
                        android:text="" />

                </RelativeLayout>
            </LinearLayout>

            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingTop="5dp"-->
            <!--android:paddingLeft="5dp">-->

            <!--<ImageView-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="10dp"-->
            <!--android:foreground="@color/black"-->
            <!--android:background="@drawable/talkm_sytle_chat_profile"/>-->
            <!--</LinearLayout>-->
        </LinearLayout>

        <!-- 中间标题文本区布局 -->

        <!--android:layout_gravity="center"-->
        <!--android:gravity="center"-->
        <!--android:layout_margin="0dp"-->

