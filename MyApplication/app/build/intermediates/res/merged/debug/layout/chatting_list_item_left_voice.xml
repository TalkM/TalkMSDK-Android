<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="5dp" >

    <ImageView
        android:id="@+id/iv_userhead"
        android:layout_width="46.5dp"
        android:layout_height="45.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/xiaohei"
        android:clickable="true"
        android:paddingBottom="4dp"
        android:paddingLeft="2dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/iv_userhead"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <!--android:background="@drawable/chatfrom_bg"-->
        <FrameLayout
            android:id="@+id/tv_chatcontent_main_layout"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/bubble_in"
            android:clickable="true"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10.5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:clickable="false"
                android:focusable="false" >

                <ImageView
                    android:id="@+id/tv_chatcontent_playStatus_for_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/chatting_voice_normal_l" />

                <TextView
                    android:id="@+id/tv_chatcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right|center_vertical"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center_vertical|right"
                    android:text="15&apos;&apos;"
                    android:textColor="@color/text_bluesky1"
                    android:textStyle="normal" />
            </FrameLayout>

            <ProgressBar
                android:id="@+id/tv_chatcontent_downloadProgress_for_voice"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:clickable="false"
                android:focusable="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/common_progress_bar_green_small"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_sendtime"
            style="@style/chat_text_date_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:text="08:10" />
    </LinearLayout>

    <!--
        <TextView
            android:id="@+id/tv_chatcontent"
            style="@style/chat_content_date_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_userhead"
            android:background="@drawable/chatfrom_bg"
            android:text="11111111111111" />
    -->

    <TextView
        android:id="@+id/tv_username"
        style="@style/chat_text_name_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/iv_userhead"
        android:layout_toLeftOf="@id/iv_userhead"
        android:text="jack"
        android:visibility="gone" />

</RelativeLayout>