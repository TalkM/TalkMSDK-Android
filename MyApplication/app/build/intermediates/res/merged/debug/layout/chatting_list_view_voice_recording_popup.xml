<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/chatting_list_view_voice_recording_popup_bg"
    android:orientation="vertical" >
    
    
    <!-- <LinearLayout
        android:id="@+id/chatting_list_view_record_frame_llPrepareProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="155dp" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

    </LinearLayout> -->

    <LinearLayout
        android:id="@+id/chatting_list_view_record_frame_llRecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/chatting_list_view_record_frame_llSend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chatting_list_view_record_frame_selector"
                android:clickable="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/chatting_list_view_record_frame_viewVolumn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/record_animate_02" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/text_darkShadow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/chat_playvoice_send"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/chatting_list_view_record_frame_viewLightEfect"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/chatting_list_view_record_frame_btn_light" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/chatting_list_view_record_frame_viewDuration"
                style="@style/text_darkShadow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/chatting_list_view_record_frame_btnCalcel"
                style="@style/ChoiceItemPopWindow_common_btn_style"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:text="@string/chat_playvoice_cancel"
                android:textColor="@color/gray_for_text"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>