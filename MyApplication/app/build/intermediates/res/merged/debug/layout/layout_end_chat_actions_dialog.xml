<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_dialog_title"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="17sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp">

        <RadioGroup
            android:id="@+id/rg_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:buttonTint="@color/dialogNegativeBtnText"
                android:id="@+id/rb_new_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/radio_dialog_new_chat"
                android:textColor="@color/dialogNegativeBtnText" />

            <RadioButton
                android:buttonTint="@color/dialogNegativeBtnText"
                android:id="@+id/rb_leave_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/radio_dialog_leave_msg"
                android:textColor="@color/dialogNegativeBtnText" />

            <RadioButton
                android:buttonTint="@color/dialogNegativeBtnText"
                android:id="@+id/rb_export_chat"
                android:text="@string/radio_dialog_export_chat"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dialogNegativeBtnText" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>