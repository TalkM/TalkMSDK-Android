<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ly_dialogContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="@color/dialogBackground"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_rating_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/rating_alert_dialog_header"
                    android:layout_marginTop="45dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/ly_ratingBtnGood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="70dp"
                        android:minHeight="70dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/dialog_rate_btn_default_border"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/iv_rating_good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_good"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/tv_rating_good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating_alert_dialog_good"
                            android:textColor="@color/dialogRateBtnDefaultColor"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:paddingTop="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_ratingBtnNeutral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="70dp"
                        android:minHeight="70dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/dialog_rate_btn_default_border"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/iv_rating_neutral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_neutral"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/tv_rating_neutral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating_alert_dialog_neutral"
                            android:textColor="@color/dialogRateBtnDefaultColor"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:paddingTop="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_ratingBtnBad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="70dp"
                        android:minHeight="70dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/dialog_rate_btn_default_border"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/iv_rating_bad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bad"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/tv_rating_bad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating_alert_dialog_bad"
                            android:textColor="@color/dialogRateBtnDefaultColor"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:paddingTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:hint="@string/rating_alert_dialog_hint"
                    android:textColorHint="@color/dialogRateEditTextHintColor"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:backgroundTint="@color/dialogRateBtnLayoutSelectedBorderColor"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="15dp">

                    <Button
                        android:id="@+id/btn_ratingNegative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_cancel"
                        android:textColor="@color/dialogNegativeBtnText"
                        android:stateListAnimator="@null"
                        android:background="?attr/selectableItemBackground"
                        android:padding="10dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:layout_marginRight="10dp"/>
                    <!--android:background="@color/dialogBackground"-->

                    <Button
                        android:id="@+id/btn_ratingPositive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_submit"
                        android:textColor="@color/dialogPositiveBtnText"
                        android:stateListAnimator="@null"
                        android:background="?attr/selectableItemBackground"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="10dp"/>
                    <!--android:background="@color/dialogBackground"-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_dialogHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_view"
                android:layout_gravity="center_horizontal"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_rating_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rating2"
                    android:layout_centerInParent="true" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>