    <!--<ImageView
        android:id="@+id/iv_userhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_avatar_d" />-->
    <ImageView
        android:id="@+id/iv_userhead"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/xiaohei"
        android:scaleType="fitXY"
        android:clickable="true"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/iv_userhead"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <!--android:background="@drawable/chatfrom_bg"-->

        <FrameLayout
            android:id="@+id/tv_chatcontent_main_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/bubble_in"
            android:clickable="true"
            android:lineSpacingExtra="1dp"
            android:minHeight="20dp"
            android:minWidth="80dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="7dp"
            android:paddingTop="8dp" >

            <TextView
                android:id="@+id/tv_chatcontent"
                style="@style/chat_content_date_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:maxWidth="250dp"
                android:clickable="false"
                android:focusable="false"
                android:text="111111111111111111f"
                android:textSize="15sp"
                />
        </FrameLayout>

        <!--<TextView-->
            <!--android:id="@+id/tv_sendtime"-->
            <!--style="@style/chat_text_date_style"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="3dp"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_below="@+id/tv_chatcontent"-->
            <!--android:layout_weight="0"-->
            <!--android:text="08:10" />-->

        <TextView
            android:id="@+id/tv_sendtime"
            style="@style/chat_text_date_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/tv_chatcontent"
            android:layout_weight="0"
            android:text="08:10" />
    </LinearLayout>



    <!--
        <TextView
            android:id="@+id/tv_chatcontent"
            style="@style/chat_content_date_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_userhead"
            android:background="@drawable/chatfrom_bg"
            android:text="11111111111111" />
    -->

    <TextView
        android:id="@+id/tv_username"
        style="@style/chat_text_name_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/iv_userhead"
        android:layout_toLeftOf="@id/iv_userhead"
        android:text="jack111111111111111111111111111111111111"
        android:visibility="gone" />

</RelativeLayout>