<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_export_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ly_dialogContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="@color/dialogBackground"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_export_chat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/export_chat_title"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="45dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/et_export_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:hint="@string/export_chat_et_hint"
                    android:textColorHint="@color/dialogRateEditTextHintColor"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:backgroundTint="@color/dialogRateBtnLayoutSelectedBorderColor"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="15dp">

                    <Button
                        android:id="@+id/btn_exportChatNegative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_cancel"
                        android:textColor="@color/dialogNegativeBtnText"
                        android:stateListAnimator="@null"
                        android:background="?attr/selectableItemBackground"
                        android:padding="10dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:layout_marginRight="10dp"/>
                    <!--android:background="@color/dialogBackground"-->

                    <Button
                        android:id="@+id/btn_exportChatPositive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_submit"
                        android:textColor="@color/dialogPositiveBtnText"
                        android:stateListAnimator="@null"
                        android:background="?attr/selectableItemBackground"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="10dp"/>
                    <!--android:background="@color/dialogBackground"-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_dialogHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_view"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_export_chat_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/ic_send_email2"
                    android:layout_centerInParent="true"/>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>